Linear Solutions: 
\begin_inset Formula $D_{\pm}(t)$
\end_inset

; 
\begin_inset Formula $D_{+}$
\end_inset

 is the growing solution.
\end_layout

\begin_layout Itemize
Interesting result: 
\begin_inset Formula 
\begin{equation}
d\ln D_{+}/d\ln a=f(\Omega).\label{eq:dlnD+}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
General Linear Solution: 
\begin_inset Formula 
\[
\delta(\vec{r},t)=\delta_{+}(\vec{r})\frac{D_{+}(t)}{D_{+}(t_{i})}+\delta_{-}(\vec{r})\frac{D_{-}(t)}{D_{-}(t_{i})}.
\]

\end_inset


\end_layout

\begin_layout Itemize
For growing mode initial conditions, 
\begin_inset Formula 
\begin{equation}
\vec{v}=-\vec{\nabla}\psi,\label{eq:v=-gradpsi}
\end{equation}

\end_inset

where 
\begin_inset Formula $\vec{v}\equiv d\vec{r}/dD_{+}$
\end_inset

 and 
\begin_inset Formula $\psi\equiv2a\phi/3H_{0}^{2}\Omega_{\text{nr}}D_{+}$
\end_inset

.
\end_layout

