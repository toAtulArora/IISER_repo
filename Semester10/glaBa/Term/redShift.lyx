\begin_layout Itemize
Velocity: 
\begin_inset Formula $\vec{V}=\dot{a}\vec{r}+a\vec{\dot{r}}$
\end_inset

; 
\begin_inset Formula 
\begin{equation}
\vec{V}=H\vec{R}+a\vec{u}.\label{eq:V=HR+au}
\end{equation}

\end_inset

(where 
\begin_inset Formula $H=\dot{a}/a,$
\end_inset

 
\begin_inset Formula $\vec{u}=\vec{\dot{r}}$
\end_inset

)
\end_layout

\begin_layout Itemize
Redshift: 
\begin_inset Formula $Z\approx V_{\text{los}}/c$
\end_inset

.
\end_layout

\begin_layout Itemize
Mass Density & Density Contrast: 
\begin_inset Formula $\rho(\vec{r},t)=\overline{\rho}(t)(1+\delta(\vec{r},t))$
\end_inset

.
\end_layout

\begin_layout Itemize
Fluid approach: 
\begin_inset Formula 
\begin{eqnarray*}
\frac{\partial\delta}{\partial t}+\vec{\nabla}.[(1+\delta)\vec{u}] & = & 0,\\
\frac{\partial u}{\partial t}+\frac{2\dot{a}}{a}\vec{u}+(u.\nabla)u & = & -\frac{1}{a^{2}}\vec{\nabla}\phi,\\
\nabla^{2}\phi & = & 4\pi Ga^{2}\overline{\rho}\delta.
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Itemize
Linear Limit: 
\begin_inset Formula $\ddot{\delta}+2H\dot{\delta}-4\pi G\rho\delta=0.$
\end_inset


\end_layout

