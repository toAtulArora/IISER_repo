\end_inset

, we get 
\begin_inset Formula $\vec{v}_{k}=-i\vec{k}\delta_{k}/k^{2}$
\end_inset

.
 
\end_layout

\begin_layout Itemize
Substituting for 
\begin_inset Formula $\vec{v}$
\end_inset

 in 
\begin_inset Formula $U$
\end_inset

, 
\begin_inset Formula 
\begin{align*}
U & =f_{0}\vec{v}_{k}.\hat{r}e^{-i\vec{k}.\vec{R}}=\frac{if_{0}\delta_{k}\vec{k}.\hat{r}e^{-i\vec{k}.\vec{R}}}{k^{2}}=\frac{if_{0}\delta_{k}\mu e^{-i\vec{k}.\vec{R}}}{k}\\
\frac{dU}{dR} & =f_{0}\mu^{2}\delta_{k}e^{-i\vec{k}.\vec{R}}=f_{0}\mu^{2}\delta,
\end{align*}

\end_inset

where 
\begin_inset Formula $\mu=\hat{k}.\hat{r}$
\end_inset

, the cosine of the angle between 
\begin_inset Formula $\vec{k}$
\end_inset

 and line of site.
 
\end_layout

\begin_layout Itemize
Thus, 
\begin_inset Formula $(1+\delta^{S})\approx(1+\delta^{R})\left(1+f_{0}\delta^{R}\mu^{2}\right)^{-1}$
\end_inset


\end_layout

